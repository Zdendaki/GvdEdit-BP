<Window x:Class="GvdEdit.GvdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        xmlns:local="clr-namespace:GvdEdit"
        mc:Ignorable="d" ShowActivated="False"
        Title="Zobrazení GVD" Height="600" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="1">
            <skia:SKElement x:Name="GvdCanvas" PaintSurface="SKGLElement_PaintSurface" Width="8000" Height="2000" MouseDown="GvdCanvas_MouseDown" />
        </ScrollViewer>
    </Grid>
</Window>
