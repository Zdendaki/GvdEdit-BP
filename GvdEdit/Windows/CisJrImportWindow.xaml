<Window x:Class="GvdEdit.Windows.CisJrImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GvdEdit.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Importovat vlaky z CIS JŘ" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Content="Vybrat adresář s vlaky z CIS JŘ" Padding="10,5" Margin="5" Click="LoadTrains_Click" />
        <ProgressBar x:Name="LoadProgress" Grid.Column="1" Margin="5" Minimum="0" IsIndeterminate="False" />

        <ListBox Grid.Row="1" Margin="5" />

        <GroupBox Grid.Row="1" Grid.Column="1" Margin="3,0,3,3" Header="Detail vlaku">
            
        </GroupBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <Button Content="Přidat vlaky" Padding="10,5" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
